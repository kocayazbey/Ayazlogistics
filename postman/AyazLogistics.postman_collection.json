{
  "info": {
    "name": "AyazLogistics API",
    "description": "Complete API collection for AyazLogistics platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "3.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"name\": \"Test User\",\n  \"phone\": \"+905551234567\",\n  \"companyName\": \"Test Company\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', jsonData.accessToken);",
                  "    pm.collectionVariables.set('refresh_token', jsonData.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@ayazlogistics.test\",\n  \"password\": \"admin123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "profile"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "auth", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "Billing",
      "item": [
        {
          "name": "Record Usage",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contractId\": \"contract_123\",\n  \"serviceType\": \"storage\",\n  \"quantity\": 100,\n  \"unit\": \"pallet\",\n  \"usageDate\": \"{{$isoTimestamp}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/billing/usage/record",
              "host": ["{{base_url}}"],
              "path": ["api", "billing", "usage", "record"]
            }
          }
        },
        {
          "name": "Get Usage Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/billing/usage/:contractId/stats?startDate=2025-10-01&endDate=2025-10-31",
              "host": ["{{base_url}}"],
              "path": ["api", "billing", "usage", ":contractId", "stats"],
              "query": [
                {"key": "startDate", "value": "2025-10-01"},
                {"key": "endDate", "value": "2025-10-31"}
              ],
              "variable": [
                {"key": "contractId", "value": "contract_123"}
              ]
            }
          }
        },
        {
          "name": "Calculate Price",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contractId\": \"contract_123\",\n  \"serviceType\": \"storage\",\n  \"quantity\": 100,\n  \"usageDate\": \"{{$isoTimestamp}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/billing/calculate-price",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "billing", "calculate-price"]
            }
          }
        }
      ]
    },
    {
      "name": "TMS",
      "item": [
        {
          "name": "Create Shipment",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"origin\": \"Istanbul\",\n  \"destination\": \"Ankara\",\n  \"pickupDate\": \"{{$isoTimestamp}}\",\n  \"customerId\": \"cust_test\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/v1/tms/shipments",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tms", "shipments"]
            }
          }
        },
        {
          "name": "Track Shipment",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/tracking/shipments/:shipmentId",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "tracking", "shipments", ":shipmentId"],
              "variable": [
                {"key": "shipmentId", "value": "ship_123"}
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Audit",
      "item": [
        {
          "name": "Get Audit Logs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/audit/logs?limit=50",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "audit", "logs"],
              "query": [
                {"key": "limit", "value": "50"}
              ]
            }
          }
        },
        {
          "name": "Get Entity History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/v1/audit/entity/:entity/:entityId",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "audit", "entity", ":entity", ":entityId"],
              "variable": [
                {"key": "entity", "value": "customer"},
                {"key": "entityId", "value": "cust_123"}
              ]
            }
          }
        }
      ]
    }
  ]
}

