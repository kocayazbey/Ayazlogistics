# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME=AyazLogistics
APP_URL=http://localhost:3000
API_PREFIX=api

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_NAME=ayazlogistics
DATABASE_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_AUDIENCE=ayazlogistics-api
JWT_ISSUER=ayazlogistics-auth

# Session Configuration
SESSION_SECRET=your-session-secret-here-minimum-32-characters

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000,http://localhost:8081
CORS_CREDENTIALS=true

# Swagger Configuration
ENABLE_SWAGGER=true

# Compression Configuration
ENABLE_COMPRESSION=true

# Timezone Configuration
TZ=Europe/Istanbul

# Language Configuration
DEFAULT_LANGUAGE=tr
DEFAULT_CURRENCY=TRY

# Security Configuration
AUDIT_ENCRYPTION_KEY=your-audit-encryption-key-here-32-characters
FIELD_ENCRYPTION_KEY=your-field-encryption-key-here-32-characters
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here-32-characters

# CSP Configuration
CSP_REPORT_ONLY=true

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn-here
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn-here

# Feature Flags Configuration
FEATURE_FLAGS_PROVIDER=unleash
FEATURE_FLAGS_URL=http://localhost:4242/api
FEATURE_FLAGS_CLIENT_KEY=your-feature-flags-client-key

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3001
LOKI_ENDPOINT=http://localhost:3100
TEMPO_ENDPOINT=http://localhost:3200

# TLS Configuration
TLS_AUTO_RENEWAL=true
CERT_MANAGER_NAMESPACE=cert-manager

# Testing Configuration
TEST_COVERAGE_THRESHOLD=80
MUTATION_TEST_THRESHOLD=70
E2E_STABILITY_THRESHOLD=85

# Development Configuration
ENABLE_DEBUG_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true